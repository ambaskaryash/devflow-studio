{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "DevFlow Studio",
    "version": "1.1.1",
    "identifier": "com.devflow.studio",
    "build": {
        "beforeDevCommand": "npm run dev --workspace=@devflow/ui --prefix ../..",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build --workspace=@devflow/ui --prefix ../..",
        "frontendDist": "../../ui/dist"
    },
    "app": {
        "withGlobalTauri": false,
        "windows": [
            {
                "title": "DevFlow Studio",
                "width": 1280,
                "height": 800,
                "minWidth": 900,
                "minHeight": 600,
                "resizable": true,
                "fullscreen": false,
                "decorations": true,
                "transparent": false,
                "center": true,
                "label": "main"
            }
        ],
        "security": {
            "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: blob:;"
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "linux": {
            "deb": {
                "depends": []
            },
            "appimage": {
                "bundleMediaFramework": false
            }
        }
    },
    "plugins": {
        "shell": {
            "open": true
        },
        "updater": {
            "endpoints": [
                "https://github.com/ambaskaryash/devflow-studio/releases/latest/download/latest.json"
            ],
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEZEQzY3OUVCM0RERUIxMzcKUldRM3NkNDk2M25HL2NkSVFQa2ZtcTQwd2ppWWhGcU9JZzZ5WXFQeXNmcjgyOFdiSG5vaVVDQTAK",
            "windows": {
                "installMode": "passive"
            }
        }
    }
}